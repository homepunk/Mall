<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_image_size">

        <FrameLayout
            android:id="@+id/item_mall_details_shop_image_frame"
            android:layout_width="@dimen/item_image_size"
            android:layout_height="@dimen/item_image_size">

            <ProgressBar
                android:id="@+id/item_shop_progress"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:indeterminate="false"
                android:progress="1"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/item_shop_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_toRightOf="@id/item_mall_details_shop_image_frame" >

            <TextView
                android:id="@+id/item_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_shop_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/item_mall_name"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>